<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Gudang.MainWarehouseActivity"
    android:background="@drawable/bg_white">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/light_blue_ocean"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:fontFamily="@font/coolvetica_rg"
        android:letterSpacing="0.05"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        android:shadowColor="@color/text_shadow"
        android:shadowDy="3"
        android:shadowRadius="4"/>

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        android:layout_marginLeft="24dp"
        android:fontFamily="@font/coolvetica_rg"
        android:letterSpacing="0.10"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="16sp"
        android:shadowDy="3"
        android:shadowColor="@color/text_shadow"
        android:shadowRadius="4"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_signOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/welcome"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/txt_username"
        app:cardBackgroundColor="@color/blue_ocean"
        android:layout_marginRight="24dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_logout"
            android:layout_margin="8dp"/>
    </androidx.cardview.widget.CardView>

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_username"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_search_view"
        android:queryHint="Nama Barang"
        android:iconifiedByDefault="false"
        android:elevation="15dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_component"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:cardBackgroundColor="@color/blue_ocean"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_monitoring"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="32dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cv_add_product">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/monitoring"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_monitoring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monitoring\nStok Barang"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/coolvetica_rg"
                android:letterSpacing="0.10"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/cv_monitoring"
                app:layout_constraintLeft_toLeftOf="@id/cv_monitoring"
                app:layout_constraintRight_toRightOf="@id/cv_monitoring"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_add_product"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="32dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/cv_monitoring"
                app:layout_constraintRight_toLeftOf="@id/cv_product">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_add"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah\nProduk Baru"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/coolvetica_rg"
                android:letterSpacing="0.10"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/cv_add_product"
                app:layout_constraintLeft_toLeftOf="@id/cv_add_product"
                app:layout_constraintRight_toRightOf="@id/cv_add_product"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_product"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="32dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/cv_add_product"
                app:layout_constraintRight_toRightOf="parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_product"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kebutuhan\nProduk"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/coolvetica_rg"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/cv_product"
                app:layout_constraintLeft_toLeftOf="@id/cv_product"
                app:layout_constraintRight_toRightOf="@id/cv_product"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/cv_component"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="56dp"
        tools:listitem="@layout/item_product"/>

    <ImageView
        android:id="@+id/empty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/empty_item"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/pb_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_component"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>