<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet_forecast"
    android:id="@+id/bottom_sheet_forecasting">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="30dp">


    <ImageView
        android:id="@+id/line"
        android:layout_width="70dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        android:src="@drawable/white_line"/>

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/nama_produk"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:fontFamily="@font/coolvetica_rg"
        android:letterSpacing="0.10"
        android:shadowColor="@color/text_shadow"
        android:shadowDy="3"
        android:shadowRadius="4"/>

    <TextView
        android:id="@+id/header_forecasting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Stock Yang di Butuhkan Bulan Depan"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/coolvetica_rg"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:letterSpacing="0.10"
        android:shadowColor="@color/text_shadow"
        android:shadowDy="3"
        android:shadowRadius="4"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_forecasting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header_forecasting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/txt_forecasting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="26sp"
            android:letterSpacing="0.10"
            android:shadowColor="@color/text_shadow"
            android:shadowDy="3"
            android:shadowRadius="4"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:fontFamily="@font/coolvetica_rg"
            android:textStyle="bold"
            android:textColor="@color/blue_ocean"
            android:gravity="center"
            android:background="@drawable/bg_white_edt_text"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/header_mape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_forecasting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Akurasi Peramalan"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/coolvetica_rg"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:letterSpacing="0.10"
        android:shadowColor="@color/text_shadow"
        android:shadowDy="3"
        android:shadowRadius="4"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header_mape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_gradient_blue"
        android:layout_marginBottom="24dp">
        <TextView
            android:id="@+id/txt_mape"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="99%"
            android:textSize="26sp"
            android:letterSpacing="0.10"
            android:shadowColor="@color/text_shadow"
            android:shadowDy="3"
            android:shadowRadius="4"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:fontFamily="@font/coolvetica_rg"
            android:textStyle="bold"
            android:textColor="@color/blue_ocean"
            android:background="@drawable/bg_white_edt_text"/>
    </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>